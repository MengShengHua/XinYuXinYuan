<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="202dp">


            <ImageView
                android:id="@+id/xianshangke_item_img"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/xianshangke_item_chongbo"
                android:layout_width="wrap_content"
                android:background="@drawable/flag_trans_bg"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:layout_marginRight="12dp"
                android:layout_alignParentTop="true"
                android:layout_height="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#66000000"
                android:layout_alignParentBottom="true"
                android:layout_height="26dp">

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:text="开课时间 :"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xianshangke_item_time"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/xianshangke_item_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/xianshangke_item_vipImage"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/xianshangke_item_biaoyan"
                    android:layout_width="wrap_content"
                    android:background="@drawable/usermajor_select_item_normal_bg"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="10sp"
                    android:layout_marginRight="8dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/xianshangke_item_jiantang"
                    android:layout_width="wrap_content"
                    android:background="@drawable/usermajor_select_item_normal_bg"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="10sp"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="16dp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="已预约:"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xianshangke_item_yuyue"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="12dp"
                android:gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="¥"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xianshangke_item_price"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFD235"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:visibility="visible"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="9dp" />

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:visibility="visible"
            android:layout_height="1dp" />

    </LinearLayout>

</LinearLayout>