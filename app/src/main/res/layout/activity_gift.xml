<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xinyuxinyuan.view.activity.wode.giftconter.GiftConterActivity">

    <include
        android:id="@+id/setActivity_title"
        layout="@layout/multiplexing_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/giftActivity_ReceiveGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/giftActivity_ReceiveGiftTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="收到的礼物" />

            <TextView
                android:id="@+id/giftActivity_ReceiveGiftColor"
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="#fff200"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/giftActivity_ReceiveCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/giftActivity_ReceiveCashTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="现金收入" />

            <TextView
                android:id="@+id/giftActivity_ReceiveCashColor"
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="#fff200"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/giftActivity_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
