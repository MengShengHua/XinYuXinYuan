<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1efef"
    android:orientation="vertical"
    tools:context="com.example.xinyuxinyuan.view.activity.perfectinformation.PerfectinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:gravity="center_horizontal"
        android:text="完善信息"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/perfectinActivity_Photograph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/perfectinActivity_header"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@mipmap/user_head_portrait" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/perfectinActivity_header"
            android:layout_alignEnd="@+id/perfectinActivity_header"
            android:layout_alignRight="@+id/perfectinActivity_header"
            android:src="@mipmap/ic_camera" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/perfectinActivity_Nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#FFFF"
            android:hint="输入昵称" />

        <ImageView
            android:id="@+id/perfectinActivity_clearNickmame"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/clear"
            android:visibility="gone" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/perfectinActivity_Rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/perfectinActivity_Man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFFF"
            android:button="@null"
            android:drawableLeft="@mipmap/wanshan_man"
            android:gravity="center_horizontal"
            android:text="我是男生" />

        <RadioButton
            android:id="@+id/perfectinActivity_woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#FFFF"
            android:button="@null"
            android:drawableLeft="@mipmap/wanshan_woan"
            android:gravity="center_horizontal"
            android:text="我是女生" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/perfectinActivity_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFFF"
            android:hint="输入密码" />

        <ImageView
            android:id="@+id/perfectinActivity_clearPassword"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/clear"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/perfectinActivity_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="完成"
        android:textColor="#FFF" />
</LinearLayout>
