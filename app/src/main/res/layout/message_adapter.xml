<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/messageAdapter_titleImg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/message_attention" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageAdapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单提醒"
            android:textColor="#0e0e0e"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/messageAdapter_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单提醒" />
    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/messageAdapter_Official"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:textColor="#FFFF"-->
        <!--android:text="官方" />-->

    <TextView

        android:layout_marginLeft="170dp"
        android:id="@+id/messageAdapter_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="时间" />
</LinearLayout>