<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/xiangqing_fudao_group"
        android:layout_width="match_parent"
        android:background="@color/blue_arlt"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="36dp"
                android:src="@mipmap/detail_coach_img"
                android:layout_height="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="请TA辅导"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



    <com.example.xinyuxinyuan.utils.MyScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/xiangqing_fudao_group"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="202dp">


                <ImageView
                    android:id="@+id/xiangqing_image_datu"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="202dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#66000000"
                    android:layout_height="27dp"
                    android:id="@+id/relativeLayout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/xiangqing_text_huibai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/relativeLayout"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="11dp"
                            android:layout_marginStart="11dp"
                            android:background="@drawable/masterdetail_live_flag"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="辣妈辣妹"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/xiangqing_chectBox_dianzan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="28dp"
                        android:layout_marginRight="28dp"
                        android:button="@drawable/detailpraise_check_bg"
                        android:checked="false"
                        android:paddingLeft="8dp"
                        android:textColor="@drawable/detailpraise_check_tv_bg" />


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/xiangqing_image_touxiang"
                    android:layout_width="40dp"
                    android:scaleType="centerCrop"
                    android:layout_height="40dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/xiangqing_text_name"
                                android:textSize="16sp"
                                android:textColor="#EC6D14"
                                android:text="啪啪啪"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/xiangqing_image_vip"
                                android:layout_width="22dp"
                                android:layout_height="22dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/xiangqing_text_daren"
                            android:textColor="#999999"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:text="画江湖"
                            android:layout_marginTop="5dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/xiangqing_text_guanzhu"
                        android:layout_width="60dp"
                        android:background="@drawable/detail_guanzhu_bg"
                        android:gravity="center"
                        android:text="关注"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@drawable/detail_guanzhu_tv_bg"
                        android:layout_height="28dp" />


                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:id="@+id/kecheng_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/kecheng_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="课程"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>


                   <LinearLayout
                       android:id="@+id/zuoye_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/zuoye_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="作业"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/fudao_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/fudao_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="辅导"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/tiezi_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/tiezi_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="帖子"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>


                   <LinearLayout
                       android:id="@+id/guanzhu_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/guanzhu_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="关注"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/fensi_lineaLayout"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/fensi_lineaLayout_text"
                           android:textColor="#0d1cba"
                           android:text="0"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="粉丝"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
               </LinearLayout>
                <TextView
                    style="@style/login_line_style"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.example.xinyuxinyuan.utils.MyScrollView
                    android:id="@+id/xiangqing_image_myScrollView"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:listSelector="@color/transparent"
                    android:scrollbars="vertical"
                    android:divider="@color/transparent"
                    android:dividerHeight="1px"
                    android:layout_height="wrap_content">
                </com.example.xinyuxinyuan.utils.MyScrollView>

                <TextView
                    android:id="@+id/xiangqing_text_xia"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:listSelector="@color/transparent"
                    android:scrollbars="vertical"
                    android:divider="@color/transparent"
                    android:dividerHeight="1px"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/masterdetail_teacherdetail_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.example.xinyuxinyuan.utils.MyScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/xiangqing_image_finish"
            android:layout_width="32dp"
            android:src="@mipmap/detail_back"
            android:layout_marginLeft="12dp"
            android:layout_height="32dp" />


        <ImageView
            android:id="@+id/xiangqing_image_fenxiang"
            android:layout_width="32dp"
            android:src="@mipmap/detail_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_height="32dp" />

    </RelativeLayout>


</RelativeLayout>
