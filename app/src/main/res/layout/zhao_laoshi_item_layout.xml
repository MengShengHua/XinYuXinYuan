<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/zhao_laoshi_item_image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/zhao_laoshi_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/zhao_laoshi_item_image"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/zhao_laoshi_item_vipImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/zhao_laoshi_item_name"
        android:layout_toEndOf="@+id/zhao_laoshi_item_name"
        android:layout_toRightOf="@+id/zhao_laoshi_item_name"
        />

    <TextView
        android:id="@+id/zhao_laoshi_item_typeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/zhao_laoshi_item_name"
         />

</RelativeLayout>