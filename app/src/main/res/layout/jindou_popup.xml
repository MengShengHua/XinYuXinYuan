<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jindou_dismiss"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFF"
        android:paddingBottom="120dp"
        android:text="请选择支付方式"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/jindou_zhifubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jindou_weixin"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/zhifubao_pay_label"
        android:gravity="center_vertical"
        android:text="支付宝支付" />

    <TextView
        android:id="@+id/jindou_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jindou_dismiss"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/weixin"
        android:gravity="center_vertical"
        android:text="微信支付" />

    <Button
        android:id="@+id/jindou_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_test"
        android:text="取消" />
</RelativeLayout>