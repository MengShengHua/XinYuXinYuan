    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.home.HomeActivity" />
        <activity android:name=".view.activity.anim.AnimActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.perfectinformation.PerfectinActivity"
            android:label="@string/title_activity_perfectin"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.univ.UnivStarActivity"
            android:label="@string/title_activity_univ_star"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.forgetpassword.ForGetPasswordActivity"
            android:label="@string/title_activity_for_get_password"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.resetpassword.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.messagesetting.MessageSettingActivity"
            android:label="@string/title_activity_message_setting"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.wode.MyMessageActivity"
            android:label="@string/title_activity_my_message"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.wode.SetActivity"
            android:label="@string/title_activity_set"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.wode.PersonalActivity"
            android:label="@string/title_activity_personal"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>